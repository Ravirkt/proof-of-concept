








<article class="class-card">
    <figure class="class-card-image-container">
        <img src="/img/img-plc.svg" class="class-card-image">
    </figure>

    <div class="class-card-text">
        <h4 class="class-name">{{ classname }}</h4>
        <p class="name">
            <img src="/img/user.svg" width="20" height="20">
            {{ name }}
        </p>
        <p hidden class="class-id">{{ class-id }}</p>
    </div>

    <div class="loader-card-container">
        <p class="progress-percentage">{{ progress }}%</p>
        <span class="loader"></span>
    </div>

    <div class="card-button-container">
        {% render 'partials/card-button.liquid', href-to-details: go-to-class %}
    </div>

</article>









            